import 'package:flutter/material.dart';
import 'package:today_favorite/screens/login_screen.dart'; // 로그인 화면 임포트

class LoadingScreen extends StatefulWidget {
  const LoadingScreen({super.key});

  @override
  State<LoadingScreen> createState() => _LoadingScreenState();
}

class _LoadingScreenState extends State<LoadingScreen> {
  @override
  void initState() {
    super.initState();
    _loadData();
  }

  Future<void> _loadData() async {
    // 여기서 데이터를 로드하거나 초기화하는 작업을 수행
    await Future.delayed(const Duration(seconds: 5)); // 3초 대기

    // 로딩이 끝난 후 로그인 화면으로 이동
    // ignore: use_build_context_synchronously
    Navigator.of(context).pushReplacement(
      MaterialPageRoute(
        builder: (context) => const LoginScreen(),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.white,
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            const Text(
              '오늘의 최애',
              style: TextStyle(
                fontSize: 48,
                fontWeight: FontWeight.bold,
              ),
            ),
            const SizedBox(height: 20),
            Image.asset('assets/images/오늘의 최애 로고.png'), // 로고 이미지 경로 예시
          ],
        ),
      ),
    );
  }
}
